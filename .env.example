# Example .env file for ChatAPI
# Copy this to .env and update values for your environment

# Environment: local, staging, production
ENVIRONMENT=production

# Security - IMPORTANT: Change this in production!
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Database Configuration - Simple DATABASE_URL
DATABASE_URL=postgresql://chatapi:chatapi_password@db:5432/chatapi

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration (for background jobs)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS Configuration - Customize for your domains (optional, has defaults)
# BACKEND_CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Optional: Monitoring with Sentry
# SENTRY_DSN=your-sentry-dsn-here

# Docker Image Configuration
DOCKER_IMAGE_CHATAPI=chatapi/chatapi
TAG=latest
