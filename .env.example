# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME="ChatAPI"

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"
SECRET_KEY=changethis

# Postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis

SENTRY_DSN=

# Redis and Celery Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email providers are now configured per-client via the API
# No system-wide email provider configuration needed
# Clients configure their own SMTP, Mailgun, SendGrid, Postmark, or SES credentials

# Configure these with your own Docker registry images
DOCKER_IMAGE_CHATAPI=chatapi
