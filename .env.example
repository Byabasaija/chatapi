# Example .env file for ChatAPI
# Copy this to .env and update values for your environment

# Environment: local, staging, production
ENVIRONMENT=production

PROJECT_NAME="ChatAPI"

# Security - IMPORTANT: Change this in production!
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# CORS Configuration (adjust for your frontend domains)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,https://yourdomain.com"

# Database Configuration
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=chatapi
POSTGRES_USER=chatapi
POSTGRES_PASSWORD=chatapi_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration (for background jobs)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Optional: Monitoring with Sentry
SENTRY_DSN=

# Docker Image Configuration
DOCKER_IMAGE_CHATAPI=chatapi/chatapi
TAG=latest

# Email providers are configured per-client via the API
# Each client can configure their own SMTP, Mailgun, SendGrid, Postmark, or SES credentials
# No system-wide email provider configuration needed
